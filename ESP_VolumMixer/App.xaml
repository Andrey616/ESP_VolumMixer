<Application x:Class="ESP_VolumMixer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ESP_VolumMixer"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <Style TargetType="{x:Type Grid}">
            <Setter Property="Background" Value="#191A1A"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#808181"/>
        </Style>

        <Style TargetType="Ellipse">

            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Stroke" Value="White"/>
            <Setter Property="Grid.Column" Value="1"/>

        </Style>

        <Style TargetType="ComboBox" x:Key="EncoderProcessStyle">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Grid.Column" Value="0"/>
            <Setter Property="Margin" Value="20"/>

        </Style>

        <Style TargetType="Slider">
            <Setter Property="Grid.Row" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Width" Value="auto"/>
            <Setter Property="Orientation" Value="Vertical"/>
            <Setter Property="Height" Value="290"/>
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="100"/>
            
        </Style>

        <Style TargetType="ComboBox" x:Key="PotenseonetrGridStyleComboBox" >
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Grid.Row" Value="1"/>
            <Setter Property="Margin" Value="0,20,10,0"/>

        </Style>

        <Style TargetType="TextBlock" x:Key="PotenseonetrGridStyleTextBox">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Grid.Row" Value="0"/>
            <Setter Property="Margin" Value="0,0,20,0"/>
            <Setter Property="Foreground" Value="White"/>

        </Style>

        <Style TargetType="TextBlock" x:Key="TextBlockProfile" >
            <Setter Property="Text" Value="Profile"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="White"/>

        </Style>

        <Style TargetType="ComboBox" x:Key="ComboboxProfile" >
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Grid.Row" Value="1"/>
            <Setter Property="Margin" Value="0,20,0,0"/>

        </Style>




    </Application.Resources>
</Application>
